<h1 class="colorP">Add New Partner</h1>

<div>List of Accountability Partners:</div>
<section id="badge-container">
  <% accountabilityPartners.forEach(function(p) { %>
    <article class="badge"><%= p.name %></article>
  <% }) %>
</section>

<form id="add-accountabilityPartner-form" action="/accountabilityPartners" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <label>Relationship:</label>
  <input type="text" name="relationship">
  <input type="submit" value="Add Accountability Partner">
</form>

</body>
